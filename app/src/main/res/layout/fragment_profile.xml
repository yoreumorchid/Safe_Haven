<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment" >

    <Button
        android:id="@+id/BtnLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#FCF5FD"
        android:drawableLeft="@drawable/logout_svgrepo_com"
        android:text="Log out"
        android:textColor="#002738"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IvProfile"
        android:layout_width="105dp"
        android:layout_height="114dp"
        android:layout_marginTop="96dp"
        android:src="@drawable/avatar_girl_svgrepo_com"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Marceline"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvProfile" />

    <ImageView
        android:id="@+id/IvEmail"
        android:layout_width="36dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/email_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TvName" />

    <EditText
        android:id="@+id/EtEmail"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toEndOf="@+id/IvEmail"
        app:layout_constraintTop_toBottomOf="@+id/TvName" />

    <ImageView
        android:id="@+id/IvPhoneNum"
        android:layout_width="34dp"
        android:layout_height="41dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/phone_flip_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvEmail" />

    <EditText
        android:id="@+id/EtPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintStart_toEndOf="@+id/IvPhoneNum"
        app:layout_constraintTop_toBottomOf="@+id/EtEmail" />

    <ImageView
        android:id="@+id/IvBloodType"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/blood_type_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvPhoneNum" />

    <Spinner
        android:id="@+id/SpnBloodType"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/IvBloodType"
        app:layout_constraintTop_toTopOf="@+id/IvBloodType" />

    <ImageView
        android:id="@+id/IvGender"
        android:layout_width="37dp"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/user_shield_alt_1_svgrepo_com"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvBloodType" />

    <Spinner
        android:id="@+id/SpnGender"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@+id/IvGender"
        app:layout_constraintTop_toTopOf="@+id/IvGender" />

    <Button
        android:id="@+id/BtnUpdateEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Update Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BtnResetPassword"
        app:layout_constraintTop_toTopOf="@+id/BtnResetPassword" />

    <Button
        android:id="@+id/BtnResetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="Reset Password"
        app:layout_constraintEnd_toStartOf="@+id/BtnUpdateEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IvGender" />

    <Button
        android:id="@+id/BtnAccountSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FCF5FD"
        android:text="Acount Setting"
        android:textColor="#002738"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnResetPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>